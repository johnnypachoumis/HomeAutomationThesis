<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smarthome.pachoumis.homeautomation">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activityPackage.HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activityPackage.AlarmScreen"
            android:launchMode="singleTask"
            />
        <activity android:name=".activityPackage.LightsScreen" />
        <activity android:name=".activityPackage.BoilerScreen" />
        <activity android:name=".activityPackage.AirConditionScreen" />
        <activity android:name=".activityPackage.BlindsScreen"/>
    </application>

</manifest>